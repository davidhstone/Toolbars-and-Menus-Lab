<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/top_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        android:layout_gravity="top"
        android:gravity="center"
        android:elevation="4dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.davidstone.toolbar.ChildActivity">

            <ImageView
                android:id="@+id/top_left_image"
                android:src="@drawable/ic_menu_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="6dp"/>
            <TextView
                android:id="@+id/podcasts_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Podcasts"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/top_left_image"
                android:layout_marginTop="3dp"/>

        </RelativeLayout>

</android.support.v7.widget.Toolbar>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:id="@+id/bottom_toolbar"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:elevation="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/left_image"
                android:src="@drawable/ic_play_circle_outline_black_24dp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="17dp"/>
            <TextView
                android:id="@+id/top_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Infinite Guest Everything Feed"
                android:textSize="15dp"
                android:layout_toRightOf="@id/left_image"
                android:paddingTop="15dp"/>
            <TextView
                android:id="@+id/bottom_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="what is this crazy text here"
                android:textSize="10dp"
                android:layout_below="@+id/top_textview"
                android:layout_toRightOf="@id/left_image"
                android:paddingTop="5dp"/>
            <ImageView
                android:id="@+id/right_image"
                android:src="@drawable/ic_terrain_black_24dp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO TO NEXT SCREEN"
        android:id="@+id/next_screen_button"
        android:layout_gravity="center" />

</FrameLayout>
